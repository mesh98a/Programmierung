<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.viewmodel.ViewModel">

    <left>
        <VBox spacing="10" style="-fx-padding: 10;">

            <GridPane hgap="5" vgap="5">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="100" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>


                <Label text="Hersteller:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <font><Font size="20.0" /></font>
                </Label>
                <TextField fx:id="input_hersteller" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Kuchentyp:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <font><Font size="20.0" /></font>
                </Label>
                <ComboBox fx:id="input_kuchentyp" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Preis:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <font><Font size="20.0" /></font>
                </Label>
                <TextField fx:id="input_preis" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Nahrwert:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <font><Font size="20.0" /></font>
                </Label>
                <TextField fx:id="input_naehrwert" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Haltbarkeit:" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <font><Font size="20.0" /></font>
                </Label>
                <TextField fx:id="input_haltbarkeit" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Allergene:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <font><Font size="20.0" /></font>
                </Label>
                <ListView fx:id="input_allergene" prefHeight="120" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label prefHeight="26.0" prefWidth="76.0" text="Extras(,):" GridPane.columnIndex="0" GridPane.rowIndex="6">
                    <font><Font size="20.0" /></font>
                </Label>
                <TextField fx:id="input_extras" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Fachnr:" GridPane.columnIndex="0" GridPane.rowIndex="7">
                    <font><Font size="20.0" /></font>
                </Label>
                <TextField fx:id="input_fachnummer" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="insert_button" mnemonicParsing="false" onAction="#insert" prefWidth="100" text="Insert">
                    <font><Font size="20.0" /></font>
                </Button>
                <Button fx:id="read_button" mnemonicParsing="false" onAction="#read" prefWidth="100" text="Read">
                    <font><Font size="20.0" /></font>
                </Button>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="update_button" mnemonicParsing="false" onAction="#update" prefWidth="100" text="Update">
                    <font><Font size="20.0" /></font>
                </Button>
                <Button fx:id="delete_button" mnemonicParsing="false" onAction="#delete" prefWidth="100" text="Delete">
                    <font><Font size="20.0" /></font>
                </Button>
            </HBox>

            <Button fx:id="clear_button" maxWidth="Infinity" mnemonicParsing="false" onAction="#clearFields" text="Clear">
                <font><Font size="20.0" /></font>
            </Button>
        </VBox>
    </left>

    <center>
        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
             <TableView fx:id="table_cake">
                 <columns>
                     <TableColumn fx:id="col_cake_fachnummer" prefWidth="104.0" text="Fachnummer" />
                     <TableColumn fx:id="col_cake_hersteller" prefWidth="113.0" text="Hersteller" />
                     <TableColumn fx:id="col_cake_inspect" prefWidth="195.0" text="Inspektion" />
                     <TableColumn fx:id="col_cake_haltbarkeit" prefWidth="213.5" text="Haltbarkeit" />
                 </columns>
             </TableView>

            <SplitPane dividerPositions="0.5">

               <TableView fx:id="table_hersteller">
                   <columns>
                       <TableColumn fx:id="col_hersteller" prefWidth="150" text="Hersteller" />
                       <TableColumn fx:id="col_number_of_cakes" prefWidth="150" text="Anzahl der Kuchen" />
                   </columns>
               </TableView>

                <TableView fx:id="table_allergen">
                    <columns>
                        <TableColumn fx:id="col_allergen" prefWidth="300" text="vorhandene Allergene" />
                    </columns>
                </TableView>
            </SplitPane>
        </SplitPane>
    </center>
</BorderPane>
